using System;


namespace ConsoleApp23
{
    class Program
    {
        static void Main(string[] args)
        {
            double p = 3.14, a;
            Console.WriteLine("Ввести значение угла в радианах");
            a = Convert.ToInt32(Console.ReadLine());
            a = (a / p) * 180;
            Console.WriteLine("Значение угла в градусах: " + a);
            Console.ReadKey();
        }
    }
}
